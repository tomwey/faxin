<div class="box">
  <div class="row-fluid">
    <div class="span8"><h2>案由列表</h2></div>
  </div>

  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th>名称</th>
      <th>判例总数</th>
      <th>#</th>
    </tr>
  
    <% @anyous.each do |anyou| %>
    <tr>
      <td><%= anyou.id %></td>
      <td><%= anyou.name %></td>
      <td><%= anyou.cases_count %></td>
      <td><%= link_to 'Edit', edit_anyou_path(anyou), class: "btn btn-mini" %> 
      <%= link_to 'Delete', anyou_path(anyou), :method => :delete, confirm: "你确定要删除吗？", class: "btn btn-danger btn-mini" %></td>
    </tr>
    <% end %>
  
  </table>
</div>

