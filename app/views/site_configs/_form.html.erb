<%= form_for(@site_config) do |f| %>
  <fieldset>
    <legend><%= legend %></legend>
    <div class="control-group">
      <label class="control-label">配置key</label>
      <div class="controls">
        <%= @site_config.key  %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :value, "配置值", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :value, :class => "span8", :rows => "20" %>
      </div>
    </div>
    
    <div class="controls">
      <%= f.submit "保存", :class => "btn btn-primary", 'data-disable-with' => "正在保存..." %>
      <a href="<%= site_configs_path %>" class="btn">取消</a>
    </div>
  </fieldset>
<% end %>
