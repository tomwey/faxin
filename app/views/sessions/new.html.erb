<%= form_tag sessions_path, :class => "form-signin" do %>
  <%= notice_message %>
  <h2 class="form-signin-heading">请登录</h2>
  <%= text_field_tag :email, params[:email], :placeholder => "邮箱", :autofocus => true %>
  <%= password_field_tag :password, :placeholder => "密码" %>
  <%= submit_tag "登录",  :class => "btn btn-large btn-primary" %>
<% end %>