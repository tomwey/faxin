<div class="box">
  <div class="row-fluid">
    <div class="span8"><h2>判例列表</h2></div>
    <div class="span4"><%= link_to '新建判例', new_case_path, class: "btn btn-primary pull-right" %>
    </div>
  </div>
  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th>标题</th>
      <th>所属案由</th>
      <th>所属法院</th>
      <th>判例类别</th>
      <th>发布日期</th>
      <th>#</th>
    </tr>
  
    <% @cases.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= link_to truncate(c.title, length: 10), c %></td>
      <td><%= c.anyou_name %></td>
      <td><%= c.court %></td>
      <td><%= c.case_type %></td>
      <td><%= c.created_at %></td>
      <td>
          <%= link_to 'Edit', edit_case_path(c), class: "btn btn-mini" %> 
          <%= link_to 'Delete', case_path(c), :method => :delete, confirm: "你确定要删除吗？", class: "btn btn-danger btn-mini" %>
      </td>
    </tr>
    
    <% end %>
  
  </table>
  
  <%= will_paginate @cases %>
  
</div>

