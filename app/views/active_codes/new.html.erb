<%= form_for @active_code, :html => { :class => "form-horizontal" } do |f| %>
  <fieldset>
    <legend>生成激活码</legend>
    <div class="control-group">
      <%= f.label :code_count, "激活码数量", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :code_count %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :month_count, "激活时间", :class => "control-label" %>
      <div class="controls">
        <%= f.select :month_count, ActiveCode::MONTH_COUNTS %>
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= f.submit "生成", :class => "btn btn-primary", :disable_with => '正在生成...' %>
      </div>
    </div>
    
  </fieldset>
<% end %>