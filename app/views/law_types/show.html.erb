<div class="box">
  <div class="row-fluid">
    <div class="span8">
      <div class="row-fluid">
        <div class="span3">
          <h2><%= @law_type.name %></h2>
        </div>
        
        <div class="span2 navbar-text">
          <% if @total %>
            共找到<%= @total %>条
          <% end %>
        </div>
        
        <div class="span7">
          <form class="form-search pull-right" action="/search" method="get">
            <div class="input-append">
                <input type="hidden" value="<%= @law_type.id %>" name="type_id" />
                <input type="text" class="input-large search-query" name="q" value="<%= params[:q] %>" placeholder="搜索"/>
                <button type="submit" class="btn">搜索</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="span4"><%= link_to '新建法律', new_law_path, class: "btn btn-primary pull-right" %>
    </div>
  </div>
  <%= render 'laws/menu' %>
  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th>标题</th>
      <th>所属类别</th>
      <th>发布日期</th>
      <th>生效日期</th>
      <th>发布部门</th>
      <th>#</th>
    </tr>
  
    <%= render @laws %>
  
  </table>
  <%= will_paginate @laws %>
</div>

