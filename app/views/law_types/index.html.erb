<div class="box">
  <div class="row-fluid">
    <div class="span8"><h2>法律类别</h2></div>
    <div class="span4"><%= link_to '新建类别', new_law_type_path, class: "btn btn-primary pull-right" %></div>
  </div>

  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th>名称</th>
      <th>法律总数</th>
      <th>#</th>
    </tr>
  
    <% @law_types.each do |type| %>
    <tr>
      <td><%= type.id %></td>
      <td><%= type.name %></td>
      <td><%= type.laws_count %></td>
      <td><%= link_to 'Edit', edit_law_type_path(type), class: "btn btn-mini" %> 
      <%= link_to 'Delete', law_type_path(type), :method => :delete, confirm: "你确定要删除吗？", class: "btn btn-danger btn-mini" %></td>
    </tr>
    <% end %>
  
  </table>
</div>

